<%- include("partials/header") %>

<!-- Top Navbar -->
<div class="topnav">
  <a id="homeNav" class="active" href="/dashboard"
    ><i class="fas fa-blog"></i>Shoes</a
  >
  <a href="/users/newblog">New Post</a>
  <a id="signinLink" href="/logout">Log out</a>
</div>

<!-- Flash Message -->
<% if (message && message.length > 0) { %>
<div id="flashDiv" class="flash welcome"><%= message %></div>
<% } %> <% if (message2 && message2.length > 0) { %>
<div id="flashDiv" class="flash welcome"><%= message2 %></div>
<% } %>

<!-- Side Navigation Section -->
<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <a href="/dashboard">All</a>
  <a href="/dashboard/ventela">Ventela</a>
  <a href="/dashboard/adidas">Adidas</a>
  <a href="/dashboard/brodo">Brodo</a>
  <a href="/dashboard/converse">Converse</a>
  <a href="/dashboard/fyc">FYC</a>
  <a href="/dashboard/nike">Nike</a>
  <a href="/dashboard/puma">Puma</a>
  <a href="/dashboard/speed">Speed</a>
  <a href="/dashboard/tomkins">Tomkins</a>
  <a href="/dashboard/vans">Vans</a>
</div>

<span style="font-size: 30px; cursor: pointer" onclick="openNav()"
  >&#9776; Open</span
>

<!-- Blogs -->
<% if (blogs.length == 0) { %>
<h1 id="noBlogH1">Sorry!! No Blogs Found!!</h1>
<% } else { %>
<div class="container">
  <% blogs.forEach(function(blog){ %>
  <div class="blogDiv">
    <h2 class="blogDetails"><%= blog.title %></h2>
    <img class="blogImages" src="<%= blog.imgURL %>" alt="blogImage" /><br />
    <div class="blogDetails">
      <span id="author-span"
        >By <%= blog.author %> on <%= blog.dateofPublish %></span
      >
      <span id="category-span">Category: <%= blog.category %></span>
      <p class="blogText"><%= blog.blogText.substring(0, 100) %>...</p>
      <a class="readMore-btn" href="/blog/<%= blog.id %> ">Read More</a>
    </div>
  </div>
  <hr />
  <% }); %>
</div>
<% } %>

