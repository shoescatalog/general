<%- include("partials/header") %>

<div class="topnav">
  <a id="homeNav" class="" href="/"><i class=""></i>Shoes Shop</a>
</div>

<!-- Flash Message -->
<% if (message && message.length > 0) { %>
<div id="flashDiv" class="flash welcome"><%= message %></div>
<% } %>

<div class="formDivLr">
  <form class="lrform" action="/users/login" method="post">
    <div class="container1">
      <h1>Login</h1>
      <label for="inputEmail"><b>Username</b></label>
      <input
        id="inputEmail"
        type="email"
        placeholder="Enter Username"
        name="email"
        required
      />
      <label for="inputPassword"><b>Password</b></label>
      <input
        id="inputPassword"
        type="password"
        placeholder="Enter Password"
        name="password"
        required
      />
      <button class="lrform-btn" type="submit">Login</button>
      <h5 class="center">Doesn't have an account? <a href="/users/register">Sign up.</a></h5>
    </div>

    <div class="container1">
      <!-- <a href="/"><button type="button" class="cancelbtn">Cancel</button></a>
      <span class="lowerText"
        >Doesn't have an account? <a href="/users/register">Sign up.</a></span
      > -->
    </div>
  </form>
</div>

